.container
  .page-header
    .row
      %h1{ :style => "text-align:center"} All Comments  
      - @comments.each do |c|
        .col-md-4 
          = c.content
          %p
          Attached To:
          = c.commentable_type
          %p
          Date Created:
          = c.created_at
          %p          
          / Date Last Updated:
          / = c.updated_at
          / %br
          / %br
          / = link_to "Show", comment_path(c)
          / = " | "
          / = link_to "Edit", edit_comment_path(c), method: "get"
          / = " | "
          = link_to "Delete", comment_path(c), :method => :delete
          %br
          %br
  / = button_to 'Add Comment', new_comment_path, method: "get", :class => "button btn btn-lg btn-primary"